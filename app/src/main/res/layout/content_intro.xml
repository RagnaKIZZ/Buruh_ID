<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:layout_centerHorizontal="true">

    <TextView
        android:id="@+id/txt_title_intro"
        tools:text="@string/intro_title_1"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_20ssp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_desc_intro"
        tools:text="@string/desc_intro_1"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_15ssp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"/>

    <ImageView
        android:layout_gravity="center|center_horizontal"
        android:id="@+id/img_intro"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_380sdp"
        android:layout_margin="@dimen/_10sdp"
        tools:src="@drawable/load_screen_3"/>

</LinearLayout>