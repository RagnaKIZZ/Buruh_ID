<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="@dimen/_120sdp"
    android:layout_height="@dimen/_150sdp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_marginStart="@dimen/_7sdp"
    android:layout_marginEnd="@dimen/_7sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:elevation="@dimen/_5sdp">
    <FrameLayout
        android:background="@color/colorOther"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginTop="@dimen/_30sdp"
            android:src="@drawable/bgkontenbawah"
            android:scaleType="fitXY"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_title_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Info Virus Indonesia"
                android:textColor="@android:color/white"
                android:fontFamily="@font/open_sans"
                android:textSize="@dimen/_9ssp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp" />

            <ImageView
                android:scaleType="centerInside"
                android:id="@+id/img_other"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="match_parent"
                android:layout_below="@id/txt_title_other"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                tools:src="@drawable/securetrans" />

        </RelativeLayout>
    </FrameLayout>

</androidx.cardview.widget.CardView>