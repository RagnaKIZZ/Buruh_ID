<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_20sdp"
    android:layout_marginStart="@dimen/_20sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_alignParentStart="true"
        android:id="@+id/ln_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Code payment"
            android:textSize="@dimen/_7ssp"
            android:textStyle="normal"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/color_payment"/>
        <TextView
            android:id="@+id/txt_code_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="TR08123241247"
            android:textSize="@dimen/_8ssp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_3sdp"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/color_payment"/>

        <TextView
            android:id="@+id/txt_price_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Rp. 500000"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/color_payment"/>

        <TextView
            android:id="@+id/txt_type_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Individual Worker"
            android:textSize="@dimen/_9ssp"
            android:textStyle="normal"
            android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/color_payment"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnstat"
        android:layout_alignParentEnd="true"

        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status payment"
            android:textSize="@dimen/_7ssp"
            android:textStyle="normal"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/color_payment"/>

        <TextView
            android:id="@+id/txt_status_payment"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_25sdp"
            android:fontFamily="@font/open_sans"
            android:textAlignment="textEnd"
            android:textColor="@color/color_payment"
            android:textSize="@dimen/_8ssp"
            android:textStyle="bold"
            tools:text="Rejected! Please send clear proof of payment!" />

        <TextView
            android:id="@+id/txt_workuntil_payment"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Work until"
            android:textSize="@dimen/_7ssp"
            android:textStyle="normal"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/color_payment"/>

        <TextView
            android:id="@+id/txt_date_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:textAlignment="textEnd"
            android:textColor="@color/color_payment"
            android:textSize="@dimen/_8ssp"
            android:textStyle="bold"
            tools:text="18-05-2020 10:35" />
    </LinearLayout>


    <View
        android:layout_alignBottom="@+id/ln_pay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="@dimen/_10sdp" />



</RelativeLayout>