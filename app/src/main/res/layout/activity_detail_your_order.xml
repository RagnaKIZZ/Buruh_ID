<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".make_order.detail_order.DetailOrderActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_alignParentTop="true"
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:elevation="0dp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
            <ImageView
                android:padding="@dimen/_2sdp"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                android:src="@drawable/logo"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btn_detail_order_back"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_arrow_back_new"
            android:layout_alignParentStart="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@android:color/transparent"/>
        <TextView
            android:id="@+id/txt_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail Order"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/open_sans"/>
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_layout"
        android:orientation="vertical">


        <com.xw.repo.widget.BounceScrollView
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:focusable="false"
                android:focusableInTouchMode="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:ellipsize="end"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/_12ssp"
                    android:text="Order code:"/>

                <TextView
                    android:id="@+id/txt_code_order"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:text="@string/individu_worker"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_your_order"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        app:civ_border_width="@dimen/_3sdp"
                        app:civ_border_color="@android:color/white"
                        tools:src="@drawable/solo_worker"/>
                    <LinearLayout
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_nama_your_order"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_15ssp"
                            tools:text="Faozi"/>

                        <TextView
                            android:id="@+id/txt_jenis_your_order"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="@dimen/_10ssp"
                            android:text="@string/individu_worker"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">
                    <Button
                        android:layout_marginStart="@dimen/_20sdp"
                        android:id="@+id/btn_call"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_gravity="end"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/ic_local_phone_w_24dp"
                        android:fontFamily="@font/open_sans"
                        android:textSize="@dimen/_12ssp"
                        android:background="@drawable/bg_call"
                        android:textColor="@android:color/white"
                        android:paddingEnd="@dimen/_20sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:text="Call"/>
                    <Button
                        android:id="@+id/btn_message"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_gravity="end"
                        android:textStyle="bold"
                        android:fontFamily="@font/open_sans"
                        android:textSize="@dimen/_12ssp"
                        android:drawableStart="@drawable/ic_message_black_24dp"
                        android:background="@drawable/bg_message"
                        android:textColor="@android:color/white"
                        android:paddingEnd="@dimen/_20sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:text="Message"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:focusable="false"
                    android:layout_marginBottom="@dimen/_5sdp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10sdp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_detail_startdate"
                            android:hint="@string/start_date"
                            android:textAlignment="center"
                            android:focusable="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans"
                            android:textSize="@dimen/_12ssp"
                            android:enabled="false"
                            android:inputType="text"
                            android:imeOptions="actionNext"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_detail_enddate"
                            android:hint="@string/end_date"
                            android:textAlignment="center"
                            android:focusable="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans"
                            android:enabled="false"
                            android:textSize="@dimen/_12ssp"
                            android:inputType="text"
                            android:imeOptions="actionNext"/>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_5sdp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_detail_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans"
                        android:focusable="false"
                        android:hint="@string/address"
                        android:lines="3"
                        android:maxLines="3"
                        android:textSize="@dimen/_12ssp"
                        android:enabled="false"
                        android:inputType="text|textMultiLine"
                        android:imeOptions="actionNext"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_marginBottom="@dimen/_5sdp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_detail_jobdesk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans"
                        android:hint="@string/job_description"
                        android:enabled="false"
                        android:focusable="false"
                        android:lines="3"
                        android:maxLines="3"
                        android:textSize="@dimen/_12ssp"
                        android:inputType="text|textMultiLine"
                        android:imeOptions="actionNext"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/total_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@android:color/black"
                    android:textAlignment="textEnd"/>

                    <TextView
                        android:id="@+id/txt_total_payment"
                        android:layout_gravity="end"
                        tools:text="Rp. 5000000"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@android:color/black"
                        android:textAlignment="textEnd"/>


                <Button
                    android:id="@+id/btn_detail_done"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_70sdp"
                    android:background="@drawable/bg_cancel"
                    android:fontFamily="@font/open_sans"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_20sdp"
                    android:text="Cancel Order"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold" />

            </LinearLayout>
        </com.xw.repo.widget.BounceScrollView>
    </RelativeLayout>

</LinearLayout>